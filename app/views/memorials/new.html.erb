<%= form_for(@memorial) do |f| %>
    <%= f.label :birthplace %>
    <%= f.text_field :birthplace %>

    <%= f.label :dob %>
    <%= f.date_field :dob %>

    <%= f.label :rip %>
    <%= f.date_field :rip %>

    <%= f.label :cemetery %>
    <%= f.text_field :cemetery %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :backgroundImage %>
    <%= f.file_field :backgroundImage %>

    <%= f.label :profileImage %>
    <%= f.file_field :profileImage %>

    <%= f.label :imagesOrVideos %>
    <%= f.file_field :imagesOrVideos, multiple: true %>

    <%= label_tag :relationship %>
    <%= text_field_tag :relationship %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>
<% end %>