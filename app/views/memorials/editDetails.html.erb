<%= form_with(url: memorialEditDetails_url, method: 'post' ) do |f| %>
    <%= f.hidden_field :_method, value: 'put' %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :birthplace %>
    <%= f.text_field :birthplace %>

    <%= f.label :dob %>
    <%= f.date_field :dob %>

    <%= f.label :rip %>
    <%= f.date_field :rip %>

    <%= f.label :cemetery %>
    <%= f.text_field :cemetery %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= label_tag :relationship %>
    <%= text_field_tag :relationship %>
    
    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>
<% end %>